{
  "name": "softauth",
  "version": "0.1.0",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "test": "jest",
    "test:unit": "jest --config jest.config.js",
    "test:integration": "jest --config jest.integration.config.js",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "type-check": "tsc --noEmit",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "gen:hash": "node -e 'console.log(require(\"crypto\").pbkdf2Sync(\"admin\", \"mysalt\", 1000, 64, \"sha512\").toString(\"hex\"))'",
    "update:config": "node -e 'const fs=require(\"fs\");const crypto=require(\"crypto\");const yaml=require(\"yaml\");const user=process.env.ADMIN_USER||\"admin\";const password=process.env.ADMIN_PASSWORD||\"admin\";const salt=process.env.ADMIN_SALT||\"mysalt\";const hash=crypto.pbkdf2Sync(password,salt,1000,64,\"sha512\").toString(\"hex\");const config={admin:{username:user,salt:salt,password:hash}};fs.writeFileSync(\"config.yaml\",yaml.stringify(config));console.log(\"Config updated with user:\",user);'"
  },
  "dependencies": {
    "@emotion/react": "latest",
    "@emotion/styled": "latest",
    "@mui/icons-material": "latest",
    "@mui/material": "latest",
    "next": "latest",
    "qrcode": "latest",
    "react": "latest",
    "react-dom": "latest",
    "speakeasy": "latest",
    "uuid": "latest",
    "yaml": "latest"
  },
  "devDependencies": {
    "@types/node": "24.3.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@types/uuid": "^10.0.0",
    "@types/qrcode": "^1.5.0",
    "@types/jest": "^30.0.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/user-event": "^14.0.0",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^29.5.0",
    "node-mocks-http": "^1.12.0",
    "typescript": "5.9.2",
    "eslint": "^8.0.0",
    "eslint-config-next": "latest",
    "audit-ci": "^6.6.1"
  }
}
